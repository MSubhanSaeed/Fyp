<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountScreen">

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@android:color/white"
        android:backgroundTint="@color/Light_Silver"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:singleLine="true"
            android:text="Home"
            android:textColor="@android:color/black"
            app:cornerRadius="0dp"
            app:icon="@drawable/home"
            app:iconGravity="top"
            app:iconPadding="4dp"
            app:iconTint="@color/black" />

        <!-- Individual Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIndividual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:singleLine="true"
            android:text="Individual"
            android:textColor="@android:color/black"
            app:cornerRadius="0dp"
            app:icon="@drawable/person"
            app:iconGravity="top"
            app:iconPadding="4dp"
            app:iconTint="@color/black" />

        <!-- Places Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:singleLine="true"
            android:text="Places"
            android:textColor="@android:color/black"
            app:cornerRadius="0dp"
            app:icon="@drawable/marker"
            app:iconGravity="top"
            app:iconPadding="4dp"
            app:iconTint="@color/black" />

        <!-- Circle Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:singleLine="true"
            android:text="Circle"
            android:textColor="@android:color/black"
            app:cornerRadius="0dp"
            app:icon="@drawable/circles"
            app:iconGravity="top"
            app:iconPadding="4dp"
            app:iconTint="@color/black" />

        <!-- Account Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:singleLine="true"
            android:text="Account"
            android:textColor="@android:color/black"
            app:cornerRadius="0dp"
            app:icon="@drawable/account"
            app:iconGravity="top"
            app:iconPadding="4dp"
            app:iconTint="@color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>